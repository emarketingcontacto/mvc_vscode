@model mvcEnterprise.Models.Employee

<form asp-action="create" asp-area="Employee" method="POST">
	<div class="row">
		<div class="col-lg-12">
			<div class="form-group">
				<label>Employee Name </label>
				<input asp-for="empName" type="text" class="form-control required" placeholder="Enter Employee Name">
			</div>

			<div class="form-group">
				<label>Employee Last Name</label>
				<input asp-for="empLName" type="text" class="form-control required" placeholder="Enter Employee Last Name">
			</div>
			
			<div class="form-group">
				<label>Category </label>
				@Html.DropDownListFor(model => model.catId, TempData["CategoriesList"] as SelectList);
			</div>
			<div class="card-footer">
				<center>
					<button class="btn btn-success">New Employee</button>
					<button class="btn btn-danger" asp-action="Index" asp-controller="Employees"> Cancel </button>
				</center>
			</div>
		</div>
	</div>
</form>