@model mvcEnterprise.Models.Employee

	<input type="hidden" asp-for="empId">
	<div class="row">
		<div class="col-lg-12">
			<div class="form-group">
				<label>Employee Name </label>
				<input asp-for="empName" type="text" class="form-control required" disabled placeholder="Enter Employee Name" >
			</div>

			<div class="form-group">
				<label>Employee Last Name</label>
			<input asp-for="empLName" type="text" class="form-control required" disabled placeholder="Enter Employee Last Name">
			</div>

			<div class="form-group">
				<label>Category </label>
			@Html.DropDownListFor(model => model.catId, TempData["CategoriesList"] as SelectList, new { @class = "form-control", disabled = "disabled" })
			</div>

			<div class="card-footer">
				<center>
					<a href="/" class="btn btn-danger">Cancel</a>
				</center>
			</div>
		</div>
	</div>
