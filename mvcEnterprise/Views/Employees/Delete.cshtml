@model mvcEnterprise.Models.Employee

<form asp-action="Delete" asp-area="Employee" method="POST">

	<input type="hidden" asp-for="empId">

	<div class="row">
		<div class="col-lg-12">
			<div class="form-group">
				<label>Employee Name </label>
				<input asp-for="empName" type="text" disabled class="form-control required" placeholder="Enter Employee Name">
			</div>

			<div class="form-group">
				<label>Employee Last Name</label>
				<input asp-for="empLName" type="text" disabled class="form-control required" placeholder="Enter Employee Last Name">
			</div>
			
			<div class="form-group">
				<label>Category </label>
				@Html.DropDownListFor(model => model.catId, TempData["CategoriesList"] as SelectList);
			</div>
			
			<div class="card-footer">
				<center>
					<button type="submit" class="btn btn-warning">Delete</button>
					@* <a asp-action="Edit" asp-controller="Employees" class="btn btn-success">Edit</a> *@
					<button class="btn btn-danger" asp-action="Index" asp-controller="Employees"> Cancel </button>
				</center>
			</div>
		</div>
	</div>
</form>